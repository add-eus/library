    "engines": {
        "node": ">=18.0.0",
        "npm": ">=7"
    },
    "bin": {
        "addeus-dev": "bin/addeus-dev.js"
    },
    "scripts": {
        "exec:functions": "npm --prefix functions run exec --",
        "dev": "concurrently --names 'default,firebase' -c 'green.bold,magenta.bold,yellow.bold' npm:dev:vite npm:dev:firebase",
        "dev:vite": "run-p dev:vite:*",
        "dev:vite:track2max": "NODE_ENV=development vite --config vite.track2max.config.ts",
        "dev:vite:speed2max": "NODE_ENV=development vite --config vite.speed2max.config.ts",
        "dev:functions": "npm --prefix functions run serve",
        "dev:firebase": "FUNCTIONS_EMULATOR_TIMEOUT_SECONDS=520 concurrently --raw npm:dev:functions 'firebase emulators:start --import $(pwd)/../firebaseExport --export-on-exit $(pwd)/../firebaseExport --only functions,auth,firestore,storage,database,eventarc,pubsub --inspect-functions &'",
        "build": "vite -c vite.config-build.ts build",
        "build:vite": "run-s build:vite:*",
        "build:vite:track2max": "vite build -c vite.track2max.config.ts",
        "build:vite:speed2max": "vite build -c vite.speed2max.config.ts",
        "build-cordova:pre": "OUTPUT_PATH=www CORDOVA=true run-s build:vite:customer",
        "build-cordova:android": "cordova build --release android && jarsigner -keypass \"$KEYPASS\" -storepass \"$KEYPASS\" -verbose -sigalg SHA1withRSA -digestalg SHA1 -keystore android.keystore platforms/android/app/build/outputs/bundle/release/app-release.aab ProdApp",
        "build-cordova:ios": "cordova build --release ios",
        "build-cordova": "run-s build-cordova:pre build-cordova:android build-cordova:ios",
        "lint": "run-s lint:eslint:fix lint:stylelint:fix lint:prettier:fix",
        "lint:changed": "run-s lint:eslint:changed lint:stylelint:changed lint:prettier:changed",
        "lint:prettier": "prettier --check \"./**/*.(ts|vue|css|scss)\"",
        "lint:prettier:fix": "prettier --write \"./**/*.(ts|vue|css|scss)\"",
        "lint:prettier:changed": "prettier --check $(git diff --name-only --diff-filter=ACMRTUXB origin/master | grep  -E \"(.(ts|vue|css|scss)$)\")",
        "lint:eslint": "eslint --ext .ts,.vue",
        "lint:eslint:fix": "eslint --fix --ext .ts,.vue",
        "lint:eslint:changed": "eslint $(git diff --name-only --diff-filter=ACMRTUXB origin/master | grep  -E \"(.js$|.ts$|.tsx$|.vue$)\")",
        "lint:stylelint": "stylelint ./**/*.{vue,css,scss}",
        "lint:stylelint:fix": "stylelint ./**/*.{vue,css,scss} --fix",
        "lint:stylelint:changed": "stylelint $(git diff --name-only --diff-filter=ACMRTUXB origin/master | grep  -E \"(.css$|.scss$|.vue$)\")",
        "test": "concurrently npm:test:lint npm:test:tsc",
        "test:tsc": "vue-tsc --noEmit",
        "test:lint": "concurrently npm:lint:eslint npm:lint:stylelint npm:lint:prettier",
        "test:e2e": "echo \"[warning] no e2e test implemented yet\"",
        "test:unit": "echo \"[warning] no unit test implemented yet\"",
        "doc": "run-s doc:database doc:vue",
        "doc:database": "for d in ./src/models/*/ ; do [ -L \"${d%/}\" ] && continue ; DIR=$(basename \"$d\"); tsuml2 --tsconfig \"./tsconfig.json\" --glob \"$d/{**/*,*}.ts\" --nomnoml --typeLinks -m --outFile \"./docs/image/$DIR-database.svg\" ; done",
        "doc:vue": "vue-styleguidist build",
        "doc:vue:dev": "vue-styleguidist server",
        "cypress": "cypress",
        "commit": "commit",
        "release": "run-s test build release:*",
        "deploy": "run-s build deploy:*",
        "deploy:firebase": "firebase deploy",
        "deploy:firebase:no-hosting": "firebase deploy --only functions,storage,database,firestore",
        "import": "./functions/bin/import-production.sh",
        "postversion": "git push origin master && git push origin --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/add-eus/library.git"
    },
    "author": "mallanic <maxime@allanic.me>",
